# Base Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /usr/src/app

# Copy package files
COPY auth-service/package*.json ./

# Install dependencies
RUN npm install

# Copy application source code
COPY auth-service/ .

# Expose the port the app runs on
EXPOSE 5001

# Command to run the application
CMD ["npm", "start"]
